<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="example.dao.NoticeDao">
  <resultMap type="notice" id="noticeMap">
    <id column="bod_no" property="no"/> 
    <result column="conts" property="contents"/>
    <result column="cre_dt" property="createdDate"/>
    <result column="vw_cnt" property="viewCount"/>
  </resultMap>
  
  <select id="selectList" resultMap="noticeMap" parameterType="map">
    select 	BOD_NO, TITLE, CONTS, CRE_DT, VW_CNT, WRITER 
    from BOARD
    where TYPE=0
    
    order by BOD_NO desc

    limit #{startIndex}, #{length}
  </select>
  
